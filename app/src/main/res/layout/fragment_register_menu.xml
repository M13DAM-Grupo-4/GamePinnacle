<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/login_background"
        android:scaleType="centerCrop"
        android:alpha="0.15"
        android:contentDescription="@string/login_background_description" />

    <TextView
        android:id="@+id/register_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_50sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_30ssp"
        android:text="@string/register_title"
        android:fontFamily="@font/roboto_medium"/>

    <LinearLayout
        android:id="@+id/register_menu_ui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/register_menu_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_subtitle_text"
            android:layout_gravity="center"
            android:textColor="@color/text"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/roboto_medium"/>

        <LinearLayout
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/black_transparent_button_blue_round">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/user_icon"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="@dimen/_15sdp"
                android:contentDescription="@string/register_user_image_description" />

            <EditText
                android:id="@+id/register_username_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:hint="@string/register_username_hint_text"
                android:textColor="@color/text"
                android:textColorHint="@color/text"
                android:textSize="@dimen/_16ssp"
                android:fontFamily="@font/roboto_medium"
                android:inputType="textEmailAddress"
                android:autofillHints="emailAddress" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/black_transparent_button_blue_round">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="@dimen/_15sdp"
                android:contentDescription="@string/register_user_image_description"
                android:src="@drawable/email_icon" />

            <EditText
                android:id="@+id/register_email_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:hint="@string/register_mail_hint_text"
                android:textColor="@color/text"
                android:textColorHint="@color/text"
                android:textSize="@dimen/_16ssp"
                android:fontFamily="@font/roboto_medium"
                android:inputType="textEmailAddress"
                android:autofillHints="emailAddress" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/black_transparent_button_blue_round"
            >

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/password_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_15sdp"
                android:contentDescription="@string/register_password_image_description" />

            <EditText
                android:id="@+id/register_password_text"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:hint="@string/register_password_hint_text"
                android:textColor="@color/text"
                android:textColorHint="@color/text"
                android:textSize="@dimen/_16ssp"
                android:fontFamily="@font/roboto_medium"
                android:inputType="textPassword"
                android:layout_gravity="center_vertical"
                android:autofillHints="password" />

            <ImageView
                android:id="@+id/register_password_visibility"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/_15sdp"
                android:src="@drawable/password_key"
                android:contentDescription="@string/register_password_visibility_description" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/black_transparent_button_blue_round"
            >

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/password_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_15sdp"
                android:contentDescription="@string/register_password_image_description" />

            <EditText
                android:id="@+id/register_password_repeated_text"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:hint="@string/login_password_repeated_hint_text"
                android:textColor="@color/text"
                android:textColorHint="@color/text"
                android:textSize="@dimen/_16ssp"
                android:fontFamily="@font/roboto_medium"
                android:inputType="textPassword"
                android:layout_gravity="center_vertical"
                android:autofillHints="password" />

            <ImageView
                android:id="@+id/login_password_repeated_visibility"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/_15sdp"
                android:src="@drawable/password_key"
                android:contentDescription="@string/register_password_visibility_description" />

        </LinearLayout>

        <Button
            android:id="@+id/login_login_button"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center"
            android:text="@string/register_login_button_text"
            android:textSize="@dimen/_16ssp"
            android:fontFamily="@font/roboto_medium"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
